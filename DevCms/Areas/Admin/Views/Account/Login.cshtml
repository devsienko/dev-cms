@model LoginModel

@section Styles {
    <link href="~/css/login-form.css" rel="stylesheet" />
}

@*<a asp-action="Register" asp-controller="Account">Регистрация</a>*@

<div class="login-form">
    <div class="main-div">
        <div class="panel">
            <p class="login-title">Sign in</p>
        </div>
        <form id="Login" asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <input type="text" asp-for="Email" class="form-control" id="inputEmail" placeholder="Email" />
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <input asp-for="Password" class="form-control" id="inputPassword" placeholder="Password" />
                <span asp-validation-for="Password"></span>
            </div>
            <div class="forgot">
                <a href="reset.html">Forgot your password?</a>
            </div>
            <button type="submit" class="btn btn-primary">Sign in</button>
        </form>
    </div>
</div>