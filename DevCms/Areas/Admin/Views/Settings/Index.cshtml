@model SettingsDto

<div class="container settings-page">
    <div class="row">
        <form asp-action="Index">
            <div class="col-xs-12">
                <div class="row title-b">
                    <div class="col-xs-12">
                        <i class="fa fa-gear" aria-hidden="true"></i>
                        Settings
                    </div>
                </div>
                <div class="row setting-row">
                    <div class="col-xs-2">
                        <strong>
                            Feedback email
                        </strong>
                    </div>
                    <div class="col-xs-10">
                        <input asp-for="NotificationRedirectionEmail" placeholder="Feedback email" />
                        <span asp-validation-for="NotificationRedirectionEmail" class="text-danger"></span>
                    </div>
                </div>
                <div class="text-right">
                    <div class="btn-group" role="group">
                        <button type="submit" class="btn btn-default">
                            Save
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}